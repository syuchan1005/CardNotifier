{
	"name": "card-notifier",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build",
		"deploy": "npm run build && wrangler deploy",
		"dev": "remix vite:dev",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "wrangler dev",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"preview": "npm run build && wrangler dev",
		"cf-typegen": "wrangler types",
		"generate:migration": "drizzle-kit generate",
		"local:migration": "wrangler d1 migrations apply card-notifier --local",
		"remote:migration": "wrangler d1 migrations apply card-notifier --remote",
		"local:seed": "wrangler d1 execute card-notifier --local --file=seed.sql",
		"remote:seed": "wrangler d1 execute card-notifier --remote --file=seed.sql",
		"local:email": "node ./receive-email.js",
		"generate:pwa-assets": "pwa-assets-generator --preset minimal-2023 public/logo.svg",
		"postinstall": "patch-package"
	},
	"dependencies": {
		"@block65/webcrypto-web-push": "^1.0.2",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.0",
		"@hono/oidc-auth": "^1.6.1",
		"@hono/zod-validator": "^0.7.0",
		"@mui/icons-material": "^7.1.1",
		"@mui/material": "^7.1.1",
		"@remix-pwa/push": "^2.10.3",
		"@remix-pwa/worker-runtime": "^2.1.4",
		"@remix-run/cloudflare": "^2.16.6",
		"@remix-run/react": "^2.16.6",
		"@remix-run/server-runtime": "^2.16.6",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.7.11",
		"hono-remix-adapter": "^0.5.4",
		"html-to-text": "^9.0.5",
		"isbot": "^4.1.0",
		"patch-package": "^8.0.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"swr": "^2.3.3",
		"uuid": "^11.1.0",
		"zod": "^3.25.56"
	},
	"devDependencies": {
		"@remix-pwa/dev": "^3.1.0",
		"@remix-run/dev": "^2.16.6",
		"@types/html-to-text": "^9.0.4",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"@vite-pwa/assets-generator": "^1.0.0",
		"autoprefixer": "^10.4.19",
		"drizzle-kit": "^0.31.1",
		"eslint": "^8.38.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"postal-mime": "^2.4.3",
		"postcss": "^8.4.38",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.1.6",
		"vite": "^6.0.0",
		"vite-tsconfig-paths": "^4.2.1",
		"wrangler": "^4.19.1"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
